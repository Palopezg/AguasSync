<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/universal_margin"
    android:background="@drawable/borde_item"
    android:padding="@dimen/item_margin"
    tools:layout_editor_absoluteY="25dp">

    <RelativeLayout
        android:id="@+id/rlItem"
        android:layout_width="420dp"
        android:layout_height="125dp"

        android:elevation="@dimen/item_margin"
        android:padding="@dimen/item_margin"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <TextView
            android:id="@+id/itemNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/itemRuta"
            android:text="Nombre"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/item_medium"
            tools:layout_editor_absoluteX="75dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/itemAnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/itemRuta"
            android:layout_toEndOf="@+id/itemPartida"
            android:text="Estado Anterior"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/black"
            android:textSize="@dimen/item_medium"
            tools:layout_editor_absoluteX="193dp"
            tools:layout_editor_absoluteY="323dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/universal_margin"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/itemMedidor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBaseline="@+id/itemPartida"
            android:layout_alignBottom="@+id/itemPartida"
            android:layout_alignParentEnd="true"
            android:text="Medidor"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/black"
            android:textSize="@dimen/item_large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemRuta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView6"
            android:layout_marginBottom="@dimen/universal_margin"
            android:layout_marginRight="@dimen/universal_margin"
            android:layout_marginTop="@dimen/universal_margin"
            android:text="1"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="19dp" />

        <TextView
            android:id="@+id/itemPartida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/itemNombre"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginLeft="@dimen/item_margin"
            android:layout_toEndOf="@+id/imageView"
            android:text="Partida"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/black"
            android:textSize="@dimen/item_large"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="290dp" />

        <TextView
            android:id="@+id/itemCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/itemAnt"
            android:layout_alignBottom="@+id/itemAnt"
            android:layout_alignStart="@+id/itemNombre"
            android:text="CÃ³digo"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/black"
            android:textSize="@dimen/item_medium"
            tools:layout_editor_absoluteX="474dp"
            tools:layout_editor_absoluteY="104dp" />

        <ImageView
            android:id="@+id/imgEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/itemOrden"
            android:layout_marginEnd="18dp"
            android:layout_toStartOf="@+id/imageView"
            android:adjustViewBounds="true"
            android:background="@android:color/holo_green_dark"
            android:cropToPadding="false"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_sync_ok"
            tools:layout_editor_absoluteX="559dp"
            tools:layout_editor_absoluteY="418dp" />

        <TextView
            android:id="@+id/itemOrden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView9"
            android:layout_below="@+id/textView9"
            android:text="Orden"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/black"
            android:textSize="@dimen/item_medium"
            tools:layout_editor_absoluteX="463dp"
            tools:layout_editor_absoluteY="59dp" />

        <TextView
            android:id="@+id/itemAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView8"
            android:layout_alignTop="@+id/imgEstado"
            android:text="Estado Actual"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/black"
            android:textSize="@dimen/item_medium"
            tools:layout_editor_absoluteX="236dp"
            tools:layout_editor_absoluteY="251dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@android:color/background_dark"
            app:srcCompat="@android:drawable/dark_header" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/itemAct"
            android:layout_below="@+id/itemAct"
            android:text="Estado Actual"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/item_small"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/itemAnt"
            android:layout_below="@+id/itemAnt"
            android:text="Estado Anterior"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/item_small"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/itemCodigo"
            android:layout_below="@+id/itemCodigo"
            android:text="Codigo"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/item_small"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/itemOrden"
            android:layout_below="@+id/itemOrden"
            android:text="Orden"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/item_small"
            android:textStyle="italic" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>